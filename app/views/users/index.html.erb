<% @users.each do |user| %>
  <%= user.name %><br/>
  <%= user.email %><br/>
  <% if user.id != current_user.id %>
     <li>
       <div class="item">
         <%= link_to user.name, user %>
         <%= link_to 'message', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
       </div>
     </li>
     <li><%= render 'form', user: user %></li> <!-- If the follow function is implemented and enters, this sentence is also necessary -->
   <% end %>
 <% end %>

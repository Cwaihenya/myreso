<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @resolution.title %>
</p>

<p>
  <strong>Details:</strong>
  <%= @resolution.details %>
</p>

<p>
  <strong>End date:</strong>
  <%= @resolution.end_date %>
</p>

<h3>The task/tasks set to achieve this resolution are<% @task %></h3>
<% for task in @resolution.tasks %>


  <p>
  <strong>Task_title:</strong>
  <%= task.task_title%>
</p>

<p>
  <strong>Task_details:</strong>
  <%= task.task_details %>
</p>

<p>
  <strong>Frequency:</strong>
  <%= task.frequency %>
</p>
<% end %>
<%= link_to 'Edit resolution', edit_resolution_path(@resolution),:"data-no-turbolink"=>true, method:"get", class:'btn btn-outline-secondary text-black' %>
<%= link_to 'Tasks View', resolution_tasks_path(@resolution) ,:"data-no-turbolink"=>true, method:"get", class:'btn btn-outline-success text-blue'%>
<%= link_to 'Add Blog', new_blog_path(:resolution_id => @resolution.id), :"data-no-turbolink"=>true, method:"get", class:'btn btn-outline-primary text-blue'%>
<%= link_to 'Back', resolutions_path,  :"data-no-turbolink"=>true, method:"get", class:'btn btn-outline-info' %>

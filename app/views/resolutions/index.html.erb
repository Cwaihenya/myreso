<div class="container-fluid">

<h1>Resolutions</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th class="text-info">End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resolutions.each do |resolution| %>
    <% if current_user.id == resolution.user_id %>
      <tr>
        <td class="task_row scope="row"><%= resolution.title %></td>
        <td><%= resolution.details %></td>
        <td class="priority_row"><%= resolution.end_date %></td>
        <td><%= link_to 'Show', resolution %></td>
        <td><%= link_to 'Edit', edit_resolution_path(resolution) %></td>
        <td><%= link_to 'Destroy', resolution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <td>  <%= link_to 'Add Blog', new_blog_path(:resolution_id => resolution.id), :"data-no-turbolink"=>true, method:"get", class:'btn btn-indigo text-blue'%></td>

      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>
<li class='connect'>
<%= link_to 'New Resolution', new_resolution_path %>

</div>

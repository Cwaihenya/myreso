<div class="container-fluid">

<h1>Resolutions</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th class="text-info">End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resolutions.each do |resolution| %>
      <tr>
        <td class="task_row scope="row"><%= resolution.title %></td>
        <td><%= resolution.details %></td>
        <td class="priority_row"><%= resolution.end_date %></td>
        <td><%= link_to 'Show', resolution %></td>
        <td><%= link_to 'Edit', edit_resolution_path(resolution) %></td>
        <td><%= link_to 'Destroy', resolution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<li class='nav-item'>
<%= link_to 'New Resolution', new_resolution_path %></li>
</div>
